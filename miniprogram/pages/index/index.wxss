/**index.wxss**/
.index-swiper{margin: 15rpx; height: 380rpx; border-radius: 20px; overflow: hidden;margin-top:100rpx} 
.index-swiper image{ width: 100%; border-radius: 20px; overflow: hidden;} 

.index-tab{display: flex; }
.index-tab view{ flex:1; text-align: center; padding: 10rpx; margin: 10rpx;} 
.index-tab view.active{border-bottom: 1px blueviolet solid; color: blueviolet;}

.index-list{ display: flex; flex-wrap: wrap; color: blueviolet;}
.index-list-item{width: 50%; margin: 10rpx 0;}
.index-list-item image{width: 90%; height: 280rpx; margin: 0 auto; display: block; border-radius: 8%;}
.index-list-text{ width: 90%; display: flex; justify-content: space-between; padding-left: 20rpx; padding-right: 20rpx;
  padding-bottom: 10rpx;
}

